<p id="notice"><%= notice %></p>

<h1>Bees</h1>

<table>
  <thead>
    <tr>
      <th>1</th>
      <th>Description</th>
      <th>Picture</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bees.each do |bee| %>
      <tr>
        <td><%= bee.name %></td>
        <td><%= bee.description %></td>

<td><%= image_tag bee.picture_url, width: '100%' if bee.picture.present? %></td>
        <td><%= bee.address %></td>
        <td><%= link_to 'Show', bee %></td>
        <td><%= link_to 'Edit', edit_bee_path(bee) %></td>
        <td><%= link_to 'Destroy', bee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bee', new_bee_path %>
